{
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "outDir": "dist/electron",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": false,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["node"],
    "ignoreDeprecations": "5.0",
    "baseUrl": ".",
    "paths": {
      "@/electron/*": ["electron/*"],
      "@/shared/*": ["src/shared/*"],
      "@/modules/*": ["src/modules/*"]
    }
  },
  "include": ["electron/**/*", "src/modules/calendar/types/**/*", "src/modules/calendar/utils/**/*"],
  "exclude": ["node_modules", "dist", "**/*.tsx", "**/components/**"]
}
